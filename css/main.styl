@require '../node_modules/tag-input/css/main'

.tag-suggest {
  position: relative;
  ul {
    font-family: Arial, Helvetica, sans-serif;
    list-style: none;
    margin: 0;
    padding-left: 0;
    border: solid 1px;
    position: absolute;
  }
  li {
    padding: 5px;
    &.highlight {
      background-color: #27ae60;
      color: #ecf0f1;
    }
  }
}
